{% extends 'base.html.twig' %}
{% block title %}{{ 'title_change_password'|trans({}, 'user') }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="jumbotron">
    {% include 'layout/flash_messages.html.twig' %}
    <div class="card-title">{{ 'title_change_password'|trans({}, 'user') }}</div>
    <div class="card">
        <div class="card-body" id="userForm">
            {{ form_start(form) }}
            {% if errors is defined %}
                {% for error in errors %}
                    <div class="alert alert-danger">{{ error|trans({}, 'user') }}</div>
                {% endfor %}
            {% endif %}
            <div class="form-group">
                {{ form_label(form.oldPassword) }}
                <small id="userNameHelp" class="form-text text-muted">{{ form_help(form.oldPassword) }}</small>
                {{ form_widget(form.oldPassword) }}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword1) }}
                <small id="userNameHelp" class="form-text text-muted">{{ form_help(form.newPassword1) }}</small>
                {{ form_widget(form.newPassword1) }}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword2) }}
                <small id="userNameHelp" class="form-text text-muted">{{ form_help(form.newPassword2) }}</small>
                {{ form_widget(form.newPassword2) }}
            </div>
            <div class="form-group">
                {{ form_label(form.submit) }}
                {{ form_widget(form.submit) }}
            </div>
            {{ form_row(form._token) }}
            {{ form_end(form, {render_rest: false}) }}

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}