{% extends 'base.html.twig' %}
{% block title %}{{ 'overview.page_title'|trans({}, 'user') }}{% endblock %}

{% block body %}
    <div class="card card-body">
        <h5 class="card-title text-center">{{ 'overview.posters'|trans({}, 'user') }}</h5>
        <div class="card-group">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">{{ 'overview.my_poster'|trans({}, 'user') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><a href="{{ path('plakate_my') }}">{{ 'overview.created_by_me'|trans({}, 'user') }}</a></p>
                    <p class="card-text"><a href="{{ path('wish_plakate_my') }}">{{ 'overview.wished_by_me'|trans({}, 'user') }}</a></p>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">{{ 'overview.in_area'|trans({}, 'user') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <h6>{{ 'overview.states'|trans({}, 'user') }}</h6>
                        <div class="list-group">
                            {% for state in  poster_states_with_berlin() %}
                                <a href="{{path('admin_election_posters_state', {"bundesland": state.state}) }}" class="list-group-item list-group-item-action">{{ state.state }}</a>
                            {% endfor %}
                        </div>
                    </p>
                    <p class="card-text">
                        <h6>{{ 'overview.areas'|trans({}, 'user') }}</h6>
                        <div class="list-group">
                            {% for place,entries in  poster_city_district() %}
                                <a href="{{path('election_posters_city', {"city": place}) }}" class="list-group-item list-group-item-action text-bold">{{ place }}</a>
                                {% if entries is not empty %}
                                <div class="list-group">
                                    {% for entry in entries %}
                                        <a href="{{path('election_posters_state_district', {"city": place, "district": entry}) }}" class="list-group-item list-group-item-action">{{ entry }}</a>
                                    {% endfor %}
                                </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </p>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">{{ 'overview.all_posters'|trans({}, 'user') }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <a href="{{ path('admin_wish_election_posters_all') }}">{{ 'overview.all_posters_hint'|trans({}, 'user') }}</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
