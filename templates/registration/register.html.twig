{% extends 'base.html.twig' %}

{% block title %}{{ 'register'|trans({}, 'register') }}{% endblock %}

{% block body %}
    <div class="jumbotron">

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error|trans({}, 'user') }}</div>
        {% endfor %}

        <h1>{{ 'register'|trans({}, 'register') }}</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.email) }}


        {{ form_row(registrationForm.agreeTerms) }}
        <p>
            <a target="_blank" href="{{ path('terms') }}">{{ 'Read Agree terms'|trans({}, 'register') }}</a>.
        </p>


        <button type="submit" class="btn btn-partei">{{ 'register'|trans({}, 'register') }}</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
